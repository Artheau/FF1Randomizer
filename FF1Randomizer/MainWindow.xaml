<Window x:Class="FF1Randomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FF1Randomizer"
        mc:Ignorable="d"
        Title="FF1Randomizer 0.5.5" Height="397.727" Width="553.836">
	<Grid Margin="0,0,0,0">
		<TextBox x:Name="RomTextBox" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
		<Label x:Name="RomLabel" Content="Original ROM" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.228,0.141" FontWeight="Bold"/>
		<Button x:Name="RomButton" Content="Browse..." HorizontalAlignment="Left" Margin="135,36,0,0" VerticalAlignment="Top" Width="75" Click="RomButton_Click"/>
		<Label x:Name="SeedLabel" Content="Seed" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
		<TextBox x:Name="SeedTextBox" HorizontalAlignment="Left" Height="23" Margin="10,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" LostFocus="SeedTextBox_LostFocus"/>
		<Button x:Name="SeedButton" Content="New Seed" HorizontalAlignment="Left" Margin="135,93,0,0" VerticalAlignment="Top" Width="75" Click="SeedButton_Click"/>
		<TabControl x:Name="tabControl" Margin="10,118,10,10">
			<TabItem Header="Randomizers">
				<Grid>
					<Label x:Name="ShuffleLabel" Content="Shuffle" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.632,-0.423" FontWeight="Bold"/>
					<CheckBox x:Name="TreasuresCheckBox" IsEnabled="True" IsChecked="True" Content="Treasures" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,36,0,0" ToolTip="Treasure chest contents will be shuffled.  Sanity checks are in place to ensure you can still finish the game." Checked="SetFlagsText" Unchecked="SetFlagsText"/>
					<CheckBox x:Name="ShopsCheckBox" IsEnabled="True" IsChecked="True" Content="Shops" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" ToolTip="Shop contents (other than magic) are shuffled." Checked="SetFlagsText" Unchecked="SetFlagsText"/>
					<CheckBox x:Name="MagicShopsCheckBox" IsEnabled="True" IsChecked="True" Content="Magic Shops" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" ToolTip="Magic shop contents are shuffled." Checked="SetFlagsText" Unchecked="SetFlagsText"/>
					<CheckBox x:Name="MagicLevelsCheckBox" IsEnabled="True" IsChecked="True" Content="Magic Levels" HorizontalAlignment="Left" Margin="10,96,0,0" VerticalAlignment="Top" ToolTip="Magic spells have their levels shuffled." Checked="MagicLevelsCheckBox_OnChecked" Unchecked="MagicLevelsCheckBox_OnUnchecked"/>
					<CheckBox x:Name="MagicPermissionsCheckBox" IsEnabled="True" IsChecked="True" Content="Keep Permissions" HorizontalAlignment="Left" Margin="24,116,0,0" VerticalAlignment="Top" ToolTip="Retain the permissions of spells, even if they're shuffled to lower levels." Checked="SetFlagsText" Unchecked="SetFlagsText"/>
					<CheckBox x:Name="EnemySkillsCheckBox" IsEnabled="False" Content="Enemy Skills" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top" ToolTip="Enemy skills (such as SQUINT) are shuffled among enemies that use skills." Checked="SetFlagsText" Unchecked="SetFlagsText"/>
					<CheckBox x:Name="EnemySpellsCheckBox" IsEnabled="False" Content="Enemy Spells" HorizontalAlignment="Left" Margin="10,156,0,0" VerticalAlignment="Top" ToolTip="Enemy spells are shuffled among enemies that use spells." Checked="SetFlagsText" Unchecked="SetFlagsText"/>
					<CheckBox x:Name="EnemyStatusAttacksCheckBox" IsEnabled="False" Content="Enemy Status Attacks" HorizontalAlignment="Left" Margin="10,177,0,0" VerticalAlignment="Top" ToolTip="Status attacks such as stun, sleep, and death are shuffled." Checked="SetFlagsText" Unchecked="SetFlagsText"/>
					
					<Label x:Name="ScaleLabel" Content="Scale:" HorizontalAlignment="Left" Margin="237,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
					<Label x:Name="ScaleFactorLabel" Content="" HorizontalAlignment="Left" Margin="282,10,0,0" VerticalAlignment="Top"/>
					<Slider x:Name="ScaleFactorSlider" HorizontalAlignment="Left" Margin="410,18,0,0" VerticalAlignment="Top" Minimum="1.5" Maximum="5" Value="2" Width="100" TickPlacement="BottomRight" TickFrequency="0.5" ValueChanged="ScaleFactorSlider_ValueChanged" ToolTip="For each value to be scaled, a random exponent is selected between -1 and +1.  The value is scaled by the scale factor raised to that power."/>
					<CheckBox x:Name="PricesCheckBox" IsEnabled="False" Content="Prices" HorizontalAlignment="Left" Margin="237,36,0,0" VerticalAlignment="Top" ToolTip="Prices of items, weapons, armor, and magic are all scaled." Checked="SetFlagsText" Unchecked="SetFlagsText"/>
					<CheckBox x:Name="EnemyStatsCheckBox" IsEnabled="True" IsChecked="True" Content="Enemy Stats" HorizontalAlignment="Left" Margin="237,56,0,0" VerticalAlignment="Top" ToolTip="Enemy stats are scaled: HP, attack power, # of hits, accuracy, critical %, defense, evade, and magic defense." Checked="SetFlagsText" Unchecked="SetFlagsText"/>
					<CheckBox x:Name="ExpGoldBoostCheckBox" Content="Exp/Gold Boost" HorizontalAlignment="Left" Margin="237,136,0,0" VerticalAlignment="Top" IsChecked="True" Checked="SetFlagsText" Unchecked="SetFlagsText"/>
					
					<Label x:Name="ExpLabel" Content="" HorizontalAlignment="Left" Margin="237,156,0,0" VerticalAlignment="Top"/>
					<Slider x:Name="ExpMultiplierSlider" HorizontalAlignment="Left" Margin="410,136,0,0" VerticalAlignment="Top" Width="100" Minimum="1" Maximum="5" TickPlacement="BottomRight" TickFrequency="1" ValueChanged="ExpMultiplierSlider_ValueChanged" ToolTip="Multiplies enemy exp and gold by this amount." Value="2"/>
					<Slider x:Name="ExpBonusSlider" HorizontalAlignment="Left" Margin="410,165,0,0" VerticalAlignment="Top" Width="100" Minimum="0" Maximum="50" TickPlacement="BottomRight" TickFrequency="10" ValueChanged="ExpBonusSlider_ValueChanged" ToolTip="Adds this amount to enemy exp and gold (after the multiplier)." Value="10"/>
				</Grid>
			</TabItem>
			<TabItem Header="Bug Fixes">
				<Grid>
					<Label x:Name="FixLabel" Content="Fix" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontWeight="Bold" />
					<CheckBox x:Name="ElementalAndCategoryAttacksCheckBox" IsEnabled="False" Content="Elemental and Category Attacks" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" ToolTip="Weapons with elemental or monster category properties will do more damage to enemies with the corresponding weaknesses."/>
					<CheckBox x:Name="WeaponCriticalHitChanceCheckBox" IsEnabled="False" Content="Weapon Critical Hit Chance" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" ToolTip="Weapons will use their critical hit % values instead of the index in the weapon table."/>
					<CheckBox x:Name="BlackBeltAbsorbCheckBox" IsEnabled="False" Content="Black Belt Absorb" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" ToolTip="Black Belt absorb will be calculated correctly after level up."/>
					<CheckBox x:Name="ChanceToRunCheckBox" IsEnabled="False" Content="Chance to Run" HorizontalAlignment="Left" Margin="10,96,0,0" VerticalAlignment="Top" ToolTip="Chance to run will be based on level and luck."/>
					<CheckBox x:Name="EnemyStatusAttacksCheckBox1" IsEnabled="False" Content="Enemy Status Attacks" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top" ToolTip="Enemy status attacks will respect immunity (e.g. ProRing) and won't apply to misses after the first hit."/>
					<CheckBox x:Name="HouseMPRestorationCheckBox" IsEnabled="False" Content="House MP Restoration" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top" ToolTip="A HOUSE will restore MP before saving the game instead of after."/>
					<CheckBox x:Name="EnemySpellsTargetingAlliesCheckBox" IsEnabled="False" Content="Enemy Spells Targeting Allies" HorizontalAlignment="Left" Margin="10,156,0,0" VerticalAlignment="Top" ToolTip="Enemy spells that target all allies will also hit the caster."/>
					<CheckBox x:Name="EnemyProtectionSpellsCheckBox" IsEnabled="False" Content="Enemy Protection Spells" HorizontalAlignment="Left" Margin="10,176,0,0" VerticalAlignment="Top" ToolTip="Enemy protection spells (such as AFIR) will work."/>
				</Grid>
			</TabItem>
		</TabControl>
		<Button x:Name="GenerateButton" Content="Generate ROM" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="150" FontSize="20" IsEnabled="False" Click="GenerateButton_Click" Height="46"/>
		<TextBox x:Name="FlagsTextBox" IsEnabled="False" HorizontalAlignment="Left" Height="23" Margin="251,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
		<Label x:Name="FlagsLabel" Content="Flags" HorizontalAlignment="Left" Margin="251,64,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.237,0.615" FontWeight="Bold"/>
	</Grid>
</Window>
