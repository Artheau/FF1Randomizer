<Window x:Class="FF1Randomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FF1Randomizer"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="450" Width="646">
	<Window.Resources>
		<local:FlagsToStringConverter x:Key="FlagsToStringConverter"/>
	</Window.Resources>
	<Grid Margin="0,0,0,0">
		<TextBox x:Name="RomTextBox" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
		<Label x:Name="RomLabel" Content="Original ROM" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.228,0.141" FontWeight="Bold"/>
		<Button x:Name="RomButton" Content="Browse..." HorizontalAlignment="Left" Margin="135,36,0,0" VerticalAlignment="Top" Width="75" Click="RomButton_Click"/>
		<Label x:Name="SeedLabel" Content="Seed" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
		<TextBox x:Name="SeedTextBox" Text="{Binding Seed}" HorizontalAlignment="Left" Height="23" Margin="10,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
		<Button x:Name="GenerateButton" Content="Generate ROM" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="150" FontSize="20" IsEnabled="False" Click="GenerateButton_Click" Height="46"/>
		<Button x:Name="AboutButton" Content="About FF1 Randomizer" HorizontalAlignment="Right" Margin="0,61,10,0" VerticalAlignment="Top" Width="150" Height="24" Click="AboutButton_Click"/>
		<TextBox x:Name="FlagsTextBox" Text="{Binding Path=Flags, Converter={StaticResource FlagsToStringConverter}}" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="135,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
		<Label x:Name="FlagsLabel" Content="Flags" HorizontalAlignment="Left" Margin="135,64,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
		<Label x:Name="PresetLabel" HorizontalAlignment="Left" Margin="250,64,0,0" VerticalAlignment="Top">
			<Hyperlink Click="LoadPreset">Load Preset...</Hyperlink>
		</Label>
		<Button x:Name="CopyButton" Content="Copy" HorizontalAlignment="Left" Margin="340,90,0,0" VerticalAlignment="Top" Width="85" Height="23" Click="CopyButton_Click"/>
		<Button x:Name="PasteButton" Content="Paste" HorizontalAlignment="Left" Margin="430,90,0,0" VerticalAlignment="Top" Width="85" Height="23" Click="PasteButton_Click"/>
		<Button x:Name="SeedButton" Content="New Seed" HorizontalAlignment="Left" Margin="520,90,0,0" VerticalAlignment="Top" Width="89" Height="23" Click="SeedButton_Click"/>
		<TabControl x:Name="tabControl" Margin="10,118,10,10">
			<TabItem Header="Shuffle">
				<Grid>
					<CheckBox x:Name="ShopsCheckBox" IsChecked="{Binding Mode=TwoWay, Path=Flags.Shops}" Content="Shops" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" ToolTip="Shop contents (other than magic) are shuffled."/>
					<CheckBox x:Name="RandomWaresCheckBox" IsChecked="{Binding Flags.RandomWares}" Content="Random Weapons and Armor" HorizontalAlignment="Left" Margin="31,30,0,0" VerticalAlignment="Top" ToolTip="Shop contents (other than magic) are shuffled."/>
					<CheckBox x:Name="MagicShopsCheckBox" IsChecked="{Binding Flags.MagicShops}" Content="Magic Shops" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" ToolTip="Magic shop contents are shuffled."/>
					<CheckBox x:Name="MagicLevelsCheckBox" IsChecked="{Binding Flags.MagicLevels}" Content="Magic Levels" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" ToolTip="Magic spells have their levels shuffled."/>
					<CheckBox x:Name="MagicPermissionsCheckBox" IsChecked="{Binding Flags.MagicPermissions}" Content="Keep Permissions" HorizontalAlignment="Left" Margin="31,90,0,0" VerticalAlignment="Top" ToolTip="Retain the permissions of spells, even if they're shuffled to lower levels."/>

					<CheckBox x:Name="RngCheckBox" IsChecked="{Binding Flags.Rng}" Content="RNG Table" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" ToolTip="Shuffle the RNG table so that encounters are more difficult to predict."/>

					<CheckBox x:Name="EnemyScriptsCheckBox" IsChecked="{Binding Flags.EnemyScripts}" Content="Enemy Scripts" HorizontalAlignment="Left" Margin="265,10,0,0" VerticalAlignment="Top" ToolTip="Enemy scripts are shuffled to different enemies."/>
					<CheckBox x:Name="AllowUnsafePiratesCheckBox" IsChecked="{Binding Flags.AllowUnsafePirates}" Content="Enemy Scripts" HorizontalAlignment="Left" Margin="286,30,0,0" VerticalAlignment="Top" ToolTip="Enemy scripts are shuffled to different enemies."/>
					<CheckBox x:Name="EnemySkillsSpellsCheckBox" IsChecked="{Binding Flags.EnemySkillsSpells}" Content="Enemy Skills/Spells" HorizontalAlignment="Left" Margin="265,50,0,0" VerticalAlignment="Top" ToolTip="Enemy skills and spells are shuffled to other scripts."/>
					<CheckBox x:Name="EnemyStatusAttacksCheckBox" IsChecked="{Binding Flags.EnemyStatusAttacks}" Content="Enemy Status Attacks" HorizontalAlignment="Left" Margin="265,70,0,0" VerticalAlignment="Top" ToolTip="Status attacks such as stun, sleep, and death are shuffled."/>
					<CheckBox x:Name="EnemyFormationsUnrunnableCheckBox" IsChecked="{Binding Flags.EnemyFormationsUnrunnable}" Content="Enemy Unrunnable Formations" HorizontalAlignment="Left" Margin="265,90,0,0" VerticalAlignment="Top" ToolTip="Enemy Unrunnable Formations"/>
					<CheckBox x:Name="EnemyFormationsSurpriseCheckBox" IsChecked="{Binding Flags.EnemyFormationsSurprise}" Content="Enemy Surprise Bonus" HorizontalAlignment="Left" Margin="265,110,0,0" VerticalAlignment="Top" ToolTip="Enemy Surprise Bonus"/>
					<CheckBox x:Name="EnemyFormationsFrequencyCheckBox" IsChecked="{Binding Flags.EnemyFormationsFrequency}" Content="Enemy Formations Frequency" HorizontalAlignment="Left" Margin="265,130,0,0" VerticalAlignment="Top" ToolTip="Enemy Formations Frequency"/>
				</Grid>
			</TabItem>
			<TabItem Header="Treasures">
				<StackPanel Orientation="Horizontal">
					<Grid>
						<Label Margin="5,5,0,0" FontWeight="Bold">Item Shuffle</Label>
						<CheckBox x:Name="TreasuresCheckBox" IsChecked="{Binding Flags.Treasures}" Content="Treasures" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" ToolTip="If unchecked, forces vanilla Treasure Chests"/>
						<CheckBox x:Name="NPCItemsCheckBox" IsChecked="{Binding Flags.NPCItems}" Content="Main NPC Items" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" ToolTip="If unchecked, forces vanilla Bridge, Lute, Ship, Rod, Canoe, Cube, Bottle"/>
						<CheckBox x:Name="NPCFetchItemsCheckBox" IsChecked="{Binding Flags.NPCFetchItems}" Content="Fetch Quest Rewards" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" ToolTip="If unchecked, forces vanilla Crystal, Herb, Key, Canal, Oxyale, Chime, Xcalber"/>
					</Grid>
					<Grid>
						<Label Margin="5,5,0,0" FontWeight="Bold">Incentivized Items</Label>
						<CheckBox x:Name="IncentivizeFreeNPCsCheckBox" IsChecked="{Binding Flags.IncentivizeFreeNPCs}" Content="Main NPCs" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" ToolTip="King, Princess, Bikke, Sarda, Sage, Robot, Caravan"/>
						<CheckBox x:Name="IncentivizeFetchNPCsCheckBox" IsChecked="{Binding Flags.IncentivizeFetchNPCs}" Content="Fetch Quest NPCs" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" ToolTip="Astos, Matoya, Prince, Dwarves, Lefein, Fairy"/>

						<CheckBox x:Name="IncentivizeIceCaveCheckBox" IsChecked="{Binding Flags.IncentivizeIceCave}" Content="Ice Cave" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" ToolTip="Floater chest"/>
						<CheckBox x:Name="IncentivizeOrdealsCheckBox" IsChecked="{Binding Flags.IncentivizeOrdeals}" Content="Ordeals" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,110,0,0" ToolTip="Tail chest"/>
						<CheckBox x:Name="IncentivizeMarshCheckBox" IsChecked="{Binding Flags.IncentivizeMarsh}" Content="Marsh Cave" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" ToolTip="Crown chest"/>

						<CheckBox x:Name="IncentivizeEarthCheckBox" IsChecked="{Binding Flags.IncentivizeEarth}" Content="Earth Cave" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,170,0,0" ToolTip="Ruby chest (behind Vampire)"/>
						<CheckBox x:Name="IncentivizeVolcanoCheckBox" IsChecked="{Binding Flags.IncentivizeVolcano}" Content="Volcano" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,190,0,0" ToolTip="Last Floor West (Red D)"/>
						<CheckBox x:Name="IncentivizeSeaShrineCheckBox" IsChecked="{Binding Flags.IncentivizeSeaShrine}" Content="Sea Shrine" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0" ToolTip="Slab chest"/>
						<CheckBox x:Name="IncentivizeSkyPalaceCheckBox" IsChecked="{Binding Flags.IncentivizeSkyPalace}" Content="Sky Palace" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,230,0,0" ToolTip="Adamant chest"/>

						<CheckBox x:Name="IncentivizeConeriaCheckBox" IsChecked="{Binding Flags.IncentivizeConeria}" Content="Coneria (locked)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,270,0,0" ToolTip="TNT chest"/>
						<CheckBox x:Name="IncentivizeMarshKeyLockedCheckBox" IsChecked="{Binding Flags.IncentivizeMarshKeyLocked}" Content="Marsh (locked)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,290,0,0" ToolTip="Bottom Floor South East"/>
					</Grid>
					<Grid>
						<Label Margin="5,5,0,0" FontWeight="Bold">Incentivized Locations</Label>
						<CheckBox x:Name="IncentivizeTailCheckBox" IsChecked="{Binding Flags.IncentivizeTail}" Content="Tail" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" ToolTip="Tail"/>
						<CheckBox x:Name="IncentivizeFetchItemsCheckBox" IsChecked="{Binding Flags.IncentivizeFetchItems}" Content="Other Quest Items" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" ToolTip="Any other non-required quest items that are shuffled such as Ruby or Adamant"/>

						<CheckBox x:Name="IncentivizeMasamuneCheckBox" IsChecked="{Binding Flags.IncentivizeMasamune}" Content="Masamune" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" ToolTip="Masamune"/>
						<CheckBox x:Name="IncentivizeRibbonCheckBox" IsChecked="{Binding Flags.IncentivizeRibbon}" Content="Ribbon" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,110,0,0" ToolTip="Ribbon"/>
						<CheckBox x:Name="IncentivizeOpalCheckBox" IsChecked="{Binding Flags.IncentivizeOpal}" Content="Opal Bracelet" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" ToolTip="Opal Bracelet"/>

						<CheckBox x:Name="IncentivizeDefCastArmorCheckBox" IsChecked="{Binding Flags.IncentivizeDefCastArmor}" Content="White Shirt" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,170,0,0" ToolTip=">White Shirt"/>
						<CheckBox x:Name="IncentivizeOtherCastArmorCheckBox" IsChecked="{Binding Flags.IncentivizeOtherCastArmor}" Content="Power Gauntlet" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,190,0,0" ToolTip="Power Gauntlet"/>
						<CheckBox x:Name="IncentivizeDefCastWeaponCheckBox" IsChecked="{Binding Flags.IncentivizeDefCastWeapon}" Content="Defense" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0" ToolTip="Defense"/>
						<CheckBox x:Name="IncentivizeOffCastWeaponCheckBox" IsChecked="{Binding Flags.IncentivizeOffCastWeapon}" Content="Thor Hammer" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,230,0,0" ToolTip="Thor Hammer"/>
					</Grid>
				</StackPanel>
			</TabItem>
			<TabItem Header="Goal">
				<StackPanel Orientation="Horizontal">
					<Grid>
						<Label Margin="5,5,0,0" FontWeight="Bold">Quick Races</Label>
						<CheckBox x:Name="ChaosRushCheckBox" IsChecked="{Binding Flags.ChaosRush}" Content="CHAOS Rush" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" ToolTip="Enable access to CHAOS without the Mystic KEY and start with the LUTE."/>
						<CheckBox x:Name="FreeOrbsCheckBox" IsChecked="{Binding Flags.FreeOrbs}" Content="Free Orbs" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" ToolTip="Enable access to CHAOS without the Mystic KEY and start with the LUTE."/>
					</Grid>
					<Grid>
						<Label Margin="5,5,0,0" FontWeight="Bold">Treasure Hunt</Label>
						<CheckBox x:Name="ShardHuntCheckBox" IsChecked="{Binding Flags.ShardHunt}" Content="Treasure Hunt" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" ToolTip="Treasure Hunt alternate gameplay mode. Collect 16 of a random Treasure Item to activate the BLACK ORB."/>
						<CheckBox x:Name="ExtraShardsCheckBox" IsChecked="{Binding Flags.ExtraShards}" Content="Extra Treasure" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" ToolTip="A larger hunt for the hardcore hunter. You will now need between 24 and 30 of the Treasure Item."/>
					</Grid>
					<Grid>
						<Label Margin="5,5,0,0" FontWeight="Bold">Extra Challenges</Label>
						<CheckBox x:Name="TransformFinalFormationCheckBox" IsChecked="{Binding Flags.TransformFinalFormation}" Content="Alternate Final Boss" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" ToolTip="Replace the Final Battle against Chaos with a different challenge."/>
					</Grid>

				</StackPanel>
			</TabItem>
			<TabItem Header="Map">
				<Grid>
					<CheckBox x:Name="OrdealsPillarsCheckBox" IsChecked="{Binding Flags.OrdealsPillars}" Content="Castle Ordeals" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" ToolTip="Teleporters in Castle Ordeals are shuffled."/>
					<CheckBox x:Name="SkyCastle4FTeleportersCheckBox" IsChecked="{Binding Flags.SkyCastle4FTeleporters}" Content="Sky Castle 4F Teleporters" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" ToolTip="Sky Castle 4F Teleporters"/>
					<CheckBox x:Name="TitansTroveCheckBox" IsChecked="{Binding Flags.TitansTrove}" Content="Titan's Trove" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" ToolTip="Titan's Trove"/>
					<CheckBox x:Name="MapOpenProgressionCheckBox" IsChecked="{Binding Flags.MapOpenProgression}" Content="Open Progression" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,110,0,0" ToolTip="Open Progression"/>
				</Grid>
			</TabItem>
			<TabItem Header="Scale">
				<Grid>
					<Label x:Name="PricesLabel" Content="Prices:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" ToolTip="Prices of items, weapons, armor, and magic are all scaled, as well as your starting gold and gold chests."/>
					<Label x:Name="PriceScaleFactorLabel" HorizontalAlignment="Left" Margin="91,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="4.4,0.462"/>
					<Slider x:Name="PriceScaleFactorSlider" Value="{Binding Flags.PriceScaleFactor}" HorizontalAlignment="Left" Margin="184,10,0,0" VerticalAlignment="Top" Minimum="1" Maximum="5" Width="100" TickPlacement="BottomRight" TickFrequency="0.5" SmallChange="0.1" LargeChange="0.5" ToolTip="For each value to be scaled, a random exponent is selected between -1 and +1.  The value is scaled by the scale factor raised to that power." ValueChanged="PriceScaleFactorSlider_ValueChanged"/>

					<Label x:Name="EnemyStatsLabel" Content="Enemy Stats:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" ToolTip="Enemy stats are scaled: HP, attack power, # of hits, accuracy, critical %, defense, evade, and magic defense."/>
					<Label x:Name="EnemyScaleFactorLabel" Content="" HorizontalAlignment="Left" Margin="91,40,0,0" VerticalAlignment="Top"/>
					<Slider x:Name="EnemyScaleFactorSlider" Value="{Binding Flags.EnemyScaleFactor}" HorizontalAlignment="Left" Margin="184,40,0,0" VerticalAlignment="Top" Minimum="1" Maximum="5" Width="100" TickPlacement="BottomRight" TickFrequency="0.5" ToolTip="For each value to be scaled, a random exponent is selected between -1 and +1.  The value is scaled by the scale factor raised to that power." ValueChanged="EnemyScaleFactorSlider_ValueChanged"/>

					<Label x:Name="ExpGoldBoostLabel" Content="Exp/Gold Boost:" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top"/>
					<Label x:Name="ExpScaleFactorLabel" Content="" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top"/>
					<Slider x:Name="ExpMultiplierSlider" Value="{Binding Flags.ExpMultiplier}" HorizontalAlignment="Left" Margin="184,85,0,0" VerticalAlignment="Top" Width="100" Minimum="1" Maximum="5" TickPlacement="BottomRight" TickFrequency="0.5" ToolTip="Multiplies enemy exp and gold by this amount." ValueChanged="ExpMultiplierSlider_ValueChanged"/>
					<Slider x:Name="ExpBonusSlider" Value="{Binding Flags.ExpBonus}" HorizontalAlignment="Left" Margin="184,115,0,0" VerticalAlignment="Top" Width="100" Minimum="0" Maximum="500" TickPlacement="BottomRight" TickFrequency="50" LargeChange="50" SmallChange="10" ToolTip="Adds this amount to enemy exp and gold (after the multiplier)." ValueChanged="ExpBonusSlider_ValueChanged"/>

					<Label x:Name="ForcedPartyMembersLabel" Content="Forced Party Members:" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" ToolTip="This number of party members will be chosen for you at the start of a new game."/>
					<Label x:Name="PartyScaleFactorLabel" Content="{Binding ElementName=PartyScaleFactorSlider, Path=Value}" HorizontalAlignment="Left" Margin="145,160,0,0" VerticalAlignment="Top"/>
					<Slider x:Name="PartyScaleFactorSlider" Value="{Binding Flags.ForcedPartyMembers}" HorizontalAlignment="Left" Margin="184,160,0,0" VerticalAlignment="Top" Minimum="0" Maximum="4" Width="100" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" SmallChange="1" LargeChange="1"/>
				</Grid>
			</TabItem>
			<TabItem Header="Conveniences">
				<Grid>
					<CheckBox x:Name="EarlySardaCheckBox" IsChecked="{Binding Flags.EarlySarda}" Content="Early Sarda Item" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" ToolTip="Sarda will give you an item without requiring Vampire dead"/>
					<CheckBox x:Name="EarlySageCheckBox" IsChecked="{Binding Flags.EarlySage}" Content="Early Sage Item" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" ToolTip="Sage in Cresent Lake will give you an item without requiring Lich dead"/>
					<CheckBox x:Name="CrownlessOrdealsCheckBox" IsChecked="{Binding Flags.CrownlessOrdeals}" Content="Early Ordeals" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" ToolTip="You will be allowed access to Castle Ordeals without the CROWN."/>
					<CheckBox x:Name="NoPartyShuffleCheckBox" IsChecked="{Binding Flags.NoPartyShuffle}" Content="No Party Shuffle" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" ToolTip="Poisoned, petrified, and slain party members will not be shuffled to the back of the party."/>
					<CheckBox x:Name="SpeedHacksCheckBox" IsChecked="{Binding Flags.SpeedHacks}" Content="Speed Hacks" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" ToolTip="Various code hacks to speed up the game."/>
					<CheckBox x:Name="IdentifyTreasuresCheckBox" IsChecked="{Binding Flags.IdentifyTreasures}" Content="Identify Treasures" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" ToolTip="Tells you what's in the box when you can't carry anymore."/>
					<CheckBox x:Name="DashCheckBox" IsChecked="{Binding Flags.Dash}" Content="Enable Dash" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" ToolTip="Enables walking faster when the B button is held."/>
					<CheckBox x:Name="BuyTenCheckBox" IsChecked="{Binding Flags.BuyTen}" Content="Buy 10 Items" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top" ToolTip="Allows buying 10 items at once in item shops."/>
					<CheckBox x:Name="WaitWhenUnrunnableCheckBox" IsChecked="{Binding Flags.WaitWhenUnrunnable}" Content="Change Unrunnable RUN to WAIT" HorizontalAlignment="Left" Margin="10,190,0,0" VerticalAlignment="Top" ToolTip="The RUN command becomes WAIT when battles are unrunnable."/>

					<CheckBox x:Name="FreeAirshipCheckBox" IsChecked="{Binding Flags.FreeAirship}" Content="Free Airship" HorizontalAlignment="Left" Margin="256,10,0,0" VerticalAlignment="Top" ToolTip="The Airship is available at the start of the game"/>
					<CheckBox x:Name="FreeBridgeCheckBox" IsChecked="{Binding Flags.FreeBridge}" Content="Free Bridge" HorizontalAlignment="Left" Margin="256,30,0,0" VerticalAlignment="Top" ToolTip="The Bridge is available at the start of the game"/>
					<CheckBox x:Name="VanillaStartingGoldCheckBox" IsChecked="{Binding Flags.VanillaStartingGold}" Content="Force Default Starting GP" HorizontalAlignment="Left" Margin="256,50,0,0" VerticalAlignment="Top" ToolTip="The Bridge is available at the start of the game"/>
					<CheckBox x:Name="EasyModeCheckBox" IsChecked="{Binding Flags.EasyMode}" Content="Easy Mode" HorizontalAlignment="Left" Margin="256,70,0,0" VerticalAlignment="Top" ToolTip="Encounter rate cut to 20% and all Enemy HP cut to 10% (after any randomizations)"/>
				</Grid>
			</TabItem>
			<TabItem Header="Bug Fixes">
				<Grid>
					<!-- ReSharper disable once InconsistentNaming -->
					<CheckBox x:Name="HouseMPRestorationCheckBox" IsChecked="{Binding Flags.HouseMPRestoration}" Content="House MP Restoration" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" ToolTip="A HOUSE will restore MP before saving the game instead of after."/>
					<CheckBox x:Name="WeaponStatsCheckBox" IsChecked="{Binding Flags.WeaponStats}" Content="Weapon Stats" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" ToolTip="Weapons with elemental or monster category properties will do more damage to enemies with the corresponding weaknesses, and will have the correct critical hit rate.  Black Belts' critical hit rate is halved to be balanced with lower weapon critical hit rates."/>
					<CheckBox x:Name="ChanceToRunCheckBox" IsChecked="{Binding Flags.ChanceToRun}" Content="Chance to Run" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" ToolTip="Chance to run will be based on level and luck."/>
					<CheckBox x:Name="SpellBugsCheckBox" IsChecked="{Binding Flags.SpellBugs}" Content="LOCK, LOK2, HEL2, TMPR, SABR" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" ToolTip="LOCK, LOK2, HEL2, TMPR, and SABR will function correctly."/>
					<CheckBox x:Name="EnemyStatusAttackBugCheckBox" IsChecked="{Binding Flags.EnemyStatusAttackBug}" Content="Enemy Status Attacks" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" ToolTip="Enemy status attacks won't apply to misses after the first hit."/>
					<CheckBox x:Name="BlackBeltAbsorbCheckBox" IsChecked="{Binding Flags.BlackBeltAbsorb}" Content="Black Belt &amp; Master Absorb Calculation" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" ToolTip="Black Belt &amp; Master Absorb Calculation"/>
					<CheckBox x:Name="EnemyElementalResistancesBugCheckBox" IsChecked="{Binding Flags.EnemyElementalResistancesBug}" Content="Enemy Elemental Resistances" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" ToolTip="Enemy Elemental Resistances"/>
					<CheckBox x:Name="EnemySpellsTargetingAlliesCheckBox" IsChecked="{Binding Flags.EnemySpellsTargetingAllies}" Content="Enemy Spells Targeting Allies" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" ToolTip="Enemy Spells Targeting Allies"/>
				</Grid>
			</TabItem>
			<TabItem Header="Fun %">
				<Grid>
					<CheckBox x:Name="FunEnemyNamesCheckBox" IsChecked="{Binding Flags.FunEnemyNames}" Content="Fun Enemy Names" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" ToolTip="Replaces enemy names with funny ones."/>
					<CheckBox x:Name="PaletteSwapCheckBox" IsChecked="{Binding Flags.PaletteSwap}" Content="Palette Swap" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" ToolTip="Shuffles enemy palettes."/>
					<CheckBox x:Name="ModernBattlefieldCheckBox" IsChecked="{Binding Flags.ModernBattlefield}" Content="Modern Battlefield" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" ToolTip="Battlefield layout inspired by subsequent Final Fantasy games."/>
					<ComboBox x:Name="TeamTyroComboBox" SelectedValue="{Binding Flags.TeamSteak}" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="265,10,0,0" ToolTip="Save the TYROs, or save the STEAKs?" SelectedValuePath="Tag">
						<ComboBoxItem Tag="False">Team TYRO</ComboBoxItem>
						<ComboBoxItem Tag="True">Team STEAK</ComboBoxItem>
					</ComboBox>
					<ComboBox x:Name="MusicComboBox" SelectedValue="{Binding Flags.Music}" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="265,37,0,0" ToolTip="How much to shuffle the game's music." SelectedValuePath="Tag">
						<ComboBoxItem Tag="None">No Music Shuffle</ComboBoxItem>
						<ComboBoxItem Tag="Standard">Standard Music Shuffle</ComboBoxItem>
						<ComboBoxItem Tag="Nonsensical">Nonsensical Music Shuffle</ComboBoxItem>
						<ComboBoxItem Tag="MusicDisabled">Disable Music</ComboBoxItem>
					</ComboBox>
				</Grid>
			</TabItem>
		</TabControl>
	</Grid>
</Window>
